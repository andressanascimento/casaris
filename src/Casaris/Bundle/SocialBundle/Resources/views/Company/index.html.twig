{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/social/css/timeline.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/social/css/friends.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/social/css/tabs.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/social/css/comments.css') }}" rel="stylesheet" />
{% endblock stylesheets %}
{% block background_photo %}
    <img src="http://www.internovias.com.br/site2013/wp-content/uploads/2015/06/31.jpg" height="300px" width="460px">
{% endblock background_photo %}
{% block profile_photo %}
    <img src="http://www.myecommerce.biz/images/samples/logo_190/mm_food_topia.gif" class="img-thumbnail picture hidden-xs" />
{% endblock profile_photo %}
{% block btn_add %}
{% endblock btn_add %}
{% block profile %}
    <div class="header" style="margin-top: 30px; padding-left: 10px">

        <h1 style="padding: 10px">
            {% block name_user %}
                {{company.name}}
            {% endblock name_user %}
        </h1>

        <span>
            {% block description %}
                <small style="padding: 10px">
                    <i class="fa fa-thumbs-o-up"> 3</i><br/>
                </small>
                <small style="padding: 10px">
                    <i class="glyphicon glyphicon-map-marker"></i> &nbsp; {{company.city.uf}}, {{company.city.name}} <br/>
                </small>
                <small style="padding: 10px">
                    {% for category in company.category %}
                        <i class="glyphicon glyphicon-tags"></i> &nbsp;{{category.name}}<br/>

                    {% endfor %}
                </small>
                <small style="padding: 10px">
                    <i class="fa fa-envelope-o"></i> &nbsp; {{company.email}} <br/>
                </small>
                <small style="padding: 10px">
                    <i class="fa fa-phone"></i> &nbsp; {{company.phone}}<br/>
                </small>
                <small style="padding: 10px">
                    <i class="fa fa-globe"></i> &nbsp; {{company.site}}
                </small>

            {% endblock description %}
        </span>
    </div>
{% endblock profile %}
{% block contact %}
    <div class="row" style="margin-top: 40px; margin-left: 10px;">
        <button class="btn btn-primary"><i class="fa fa-plus"></i> &nbsp; Recomendar</button>
    </div>
{% endblock contact %}
{% block container %}
    {{ parent() }}
    <div class="container">
        <div class="row" style="background: #fff; padding: 20px">

            <div class="tabbable-panel" style="border: none; padding: 0px;">
                <div class="tabbable-line">
                    <ul class="nav nav-tabs ">
                        <li class="active">
                            <a href="#tab_default_1" data-toggle="tab">Empresa</a>
                        </li>
                        <li>
                            <a href="#tab_default_2" data-toggle="tab">Produtos</a>
                        </li>

                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_default_1">
                            <div class="col-lg-6">
                                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carousel-example-generic" data-slide-to="0" class=""></li>
                                        <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                                        <li data-target="#carousel-example-generic" data-slide-to="2" class="active"></li>
                                    </ol>
                                    <div class="carousel-inner" role="listbox">
                                        <div class="item">
                                            <img src="http://www.internovias.com.br/site2013/wp-content/uploads/2015/06/31.jpg" data-holder-rendered="true">
                                        </div>
                                        <div class="item">
                                            <img src="http://www.muitochique.com/wp-content/uploads/2013/04/Buffet-de-casamento.13.jpg" data-holder-rendered="true">
                                        </div>
                                        <div class="item active">
                                            <img src="http://www.publiqueideias.com/wp-content/uploads/2013/04/buffet-casamento-em-curitiba.jpg" data-holder-rendered="true">
                                        </div>
                                    </div>
                                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                <br/><br/>
                                <br/>
                            </div>
                            <div class="col-lg-6">
                                <h4 class="text-primary">Sobre</h4>
                                <br>
                                <p class="text-justify">Com 20 anos no mercado, nos comprometemos a entregar uma comida maravilhosa para os paladares mais exigentes. Estamos iniciando no ramo vegetariano e vegano para casamento ecofree, venha conhecer nossas propostas!</p>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_default_2">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div class="row" style="background: #fff; padding: 10px">
            <h3 class="page-header text-primary">Recomendados</h3>
            {% for r in recomendations %}
                <div class="col-sm-3 col-md-3">
                    <div class="thumbnail">
                        <img data-src="holder.js/100%x100" alt="100%x200" src="data:image/svg+xml;base64," data-holder-rendered="true" style="height: 150px; width: 100%; display: block;">
                        <div class="caption">
                            <small>
                                <a href="#"><p>{{r.name}}</a>
                                <p>
                                    <i class="glyphicon glyphicon-map-marker"></i> {{r.city.uf}}, {{r.city.name}} <br>
                                    {% for c in r.category %}
                                        <i class="glyphicon glyphicon-tags"></i>&nbsp; {{c.name}} <br/>
                                    {% endfor %}

                                </p>
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <br/>
    </div>
{% endblock container %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/social/js/profile_page.js') }}"></script>
    <script src="{{ asset('bundles/social/js/friends.js') }}"></script>
{% endblock %}