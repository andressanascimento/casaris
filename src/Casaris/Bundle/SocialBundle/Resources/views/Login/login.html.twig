<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Casaris{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet" />

            <link href="{{ asset('/css/login.css') }}" rel="stylesheet" />

        {% endblock %}
    </head>
    <body style="padding-top: 80px; background: url('/images/wedding_login.jpg')">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    {% block navbar %}
                        <div class="navbar navbar-default navbar-fixed-top">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" href="#">Casaris</a>
                            </div>
                        </div>
                    {% endblock navbar %}
                </div>
                <div class="col-xs-11">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-5">
                            </div>
                            <div class="col-xs-3">
                                <div class="well">
                                    <form id="loginForm" method="POST" action="/login/" novalidate="novalidate">
                                        <div class="form-group">
                                            <label for="username" class="control-label">Login</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-envelope"></span>
                                                </span>
                                                <input class="form-control" type="text" placeholder="Email address">
                                            </div>
                                            <span class="help-block"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="password" class="control-label">Senha</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-lock"></span>
                                                </span>
                                                <input class="form-control" type="password" placeholder="Password">
                                            </div> 
                                            <span class="help-block"></span>
                                        </div>
                                        <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password</div>

                                        <p><h6><a href="/recuperar_senha">Esqueci minha senha</a></h6></p>

                                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                                        <a href="/forgot/" class="btn btn-info btn-block">Crie sua conta</a>
                                    </form>
                                </div>
                            </div>
                            <div class="col-xs-3">
                            </div>
                        {% endblock content %}
                    </div>
                </div>
            </div>
            {% block javascripts %}
                <script src="{{ asset('/js/jquery.min.js') }}"></script>
                <script src="{{ asset('/js/bootstrap.min.js') }}"></script>
            {% endblock %}
    </body>
</html>